<%- include("../partials/header.ejs") %>
<div class="container">
	<h1 style="text-align:center;">
	Make A New Campground!
</h1>
<div class="row" style="margin:2% 35%;">
	<form action="/campgrounds" method="POST">
		<div class="form-group">
			<label>Name</label>
			<input class="form-control" type="text" name="name" placeholder="name" required>
		</div>
	<div class="form-group">
			<label>Image Url</label>
			<input class="form-control" type="url" name="image" placeholder="image url" required>
		</div>
		<div class="form-group">
			<label>Price</label>
			<input class="form-control" type="number" name="price" placeholder="0.01" min="0.01" step="0.01" required>
		</div>
		<div class="form-group">
			<label>About</label>
			<input class="form-control" type="text" name="description" placeholder="description" required>
		</div>
	<div class="form-group">
			<button class="btn btn-primary btn-block">
		Submit
	</button>
		</div>	
	</form>	
	<div class="row" style="margin:2% 22%;">
		<a href="/campgrounds">Go Back</a></div>
	</div>

</div>

<%- include("../partials/footer.ejs") %>