<%-include("../partials/header.ejs")%>
<link rel="stylesheet" href="../show.css">
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				<strong>YelpCamp</strong>
			</p>
			<ul class="list-group">
				<a href="/campgrounds/<%=campground._id%>" class="list-group-item list-group-item-action active">Info</a>
				<a href="/campgrounds/<%=campground._id%>/map" class="list-group-item list-group-item-action">Map</a>
				<a href="#" class="list-group-item list-group-item-action">Info 3</a>
			</ul>
		</div>
		<div class="col-md-9 container">
			<div class="card">
				<img class="card-img-top" src="<%=campground.image%>">
				<div class="card-body">
					<div class='card-title' >
						<h4 class="mine" >
							<a href="#" class="text"><strong><%=campground.name%></strong></a>
						</h4>
						<h4 class="my">
						&#x20B9; <%=campground.price%>/night
					</h4>				
						
		
	</div>			
					
					<p class="card-text des"><%=campground.description%>
</p>		
					<p><em><%=campground.author.username%></em>
</p>
					<%if(currentUser&&campground.author.id&&campground.author.id.equals(currentUser._id)){%>
						<a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning">Edit</a>
						<form class="deleteform" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger">
								Delete
							</button>
						</form>
					<%}%>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-success">Add a new comment <i class="fa fa-comments" aria-hidden="true"></i></a>
				</div>
				<% campground.comments.forEach(function(comment){%>
				<div class="row">
					<div class="col-md-12 card card-body">						
						<strong class="card-title"><%=comment.author.username%></strong>
						<p class="card-text"> <%=comment.text%></p>
						<%if(currentUser&&comment.author.id&&comment.author.id.equals(currentUser._id)){%>
						<div class="row container">
							<a href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit" class="btn btn-warning col-1">Edit</a>
						<form class="deleteform col-1" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							<button class="btn btn-danger">
								Delete
							</button>
						</form>
						</div>
						
						<%}%>						
						
					</div>
				</div>
					<%});%>
	

				
				
			</div>
		</div>
	</div>
			


	


</div>


<%-include("../partials/footer.ejs")%>