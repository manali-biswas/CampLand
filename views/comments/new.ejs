<%- include("../partials/header.ejs") %>
<div class="container">
	<h1 style="text-align:center;">
	Add A New Comment To <%=campground.name%>
</h1>
<div class="row" style="margin:2% 35%;">
	<form action="/campgrounds/<%=campground.id%>/comments" method="POST">
		<div class="form-group">
			<label>Comment</label>
			<input class="form-control" type="text" name="comment[text]" placeholder="Text">
		</div>			
	<div class="form-group">
			<button class="btn btn-primary btn-block">
		Submit
	</button>
		</div>	
	</form>	
	<div class="row" style="margin:2% 22%;">
		<a href="/campgrounds">Go Back</a></div>
	</div>

</div>

<%- include("../partials/footer.ejs") %>